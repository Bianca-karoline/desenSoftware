import java.util.ArrayList;
public class House {
    private String color;
    private ArrayList<Door> porta = new ArrayList<>();
    public void paint(String color) {
        this.color = color;
    }
    public String sla(){
        return color;
    }
    public void open(int p){
        porta.get(p).open();
    }
    public void close(int p){
        porta.get(p).close();
    }
    public void portaAdd(Door a){
        porta.add(a);
    }
    public int doorsIsOpen(){
        int q=0;
        int i=0;
        for(i=0;i<porta.size();i++){
            System.out.println(porta.get(i).isOpen());
            if(porta.get(i).isOpen() == true){
                q++;
            }
        }
        return q;
    }
    public String toString(){
        String texto = new String();
        for(Door lista : porta){
            texto = texto + "\t" + lista.getDoor();
        }
        return texto;
    }
}
