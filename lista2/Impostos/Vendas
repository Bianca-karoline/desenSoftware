package Impostos;

public class Vendas {
	private double vendas;
	private double excesso = 0;
	private double multa = 0;
	
	public void setVendas(double vendas) {
		this.vendas += vendas;
	}
	public String getExcesso() {
		excesso = this.vendas / 30;
		if(excesso>500) {
			this.excesso = excesso - 500;
			multa = 0.1 * excesso;
		}else {
			excesso = 0;
		}
		return "Vendas do mÃªs: " + this.vendas + "\t Excesso: " + this.excesso + "\t Multa: " + this.multa;
		
	}
}
